<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fields name="addEventFields">
        <fieldset name="addEventBasic">
            <field
                    type="text"
                    name="eventName"
                    id="eventName"
                    label="COM_HELKACAL_EVENT_NAME_LABEL"
                    description="COM_HELKACAL_EVENT_NAME_DESC"
                    size="80"
                    maxLength="255"
		    required="true"
	    />
            <field
                    type="editor"
                    name="eventDesc"
                    id="eventDesc"
                    label="COM_HELKACAL_EVENT_DESC_LABEL"
                    description="COM_HELKACAL_EVENT_DESC_DESC"
                    rows="5"
                    cols="200"
		    required="true"
	    />
	    <field
		    type="file"
		    name="eventImg"
		    id="eventImg"
		    label="COM_HELKACAL_EVENT_IMG_LABEL"
		    desc="COM_HELKACAL_EVENT_IMG_DESC"
		    accept="image/*"
	    />
	</fieldset>
	<fieldset name="addEventDates">
            <field
                    type="calendar"
                    name="startday"
                    id="startday"
                    label="COM_HELKACAL_EVENT_START_DAY_LABEL"
                    description="COM_HELKACAL_EVENT_START_DAY_DESC"
		    required="true"
	    />
            <field
                    type="twodigitinteger"
		    first="0"
		    step="1"
		    last="23"
                    name="starthour"
                    id="starthour"
                    label="COM_HELKACAL_EVENT_START_HOUR_LABEL"
                    description="COM_HELKACAL_EVENT_START_HOUR_DESC"
	    />
            <field
                    type="twodigitinteger"
		    first="0"
		    step="5"
		    last="55"
                    name="startminute"
                    id="startminute"
                    label="COM_HELKACAL_EVENT_START_MINUTE_LABEL"
                    description="COM_HELKACAL_EVENT_START_MINUTE_DESC"
	    />
            <field
                    type="calendar"
                    name="endday"
                    id="endday"
                    label="COM_HELKACAL_EVENT_END_DAY_LABEL"
                    description="COM_HELKACAL_EVENT_END_DAY_DESC"
	    />
            <field
                    type="twodigitinteger"
		    first="0"
		    step="1"
		    last="23"
                    name="endhour"
                    id="endhour"
                    label="COM_HELKACAL_EVENT_END_HOUR_LABEL"
                    description="COM_HELKACAL_EVENT_END_HOUR_DESC"
	    />
            <field
                    type="twodigitinteger"
		    first="0"
		    step="5"
		    last="55"
                    name="endminute"
                    id="endminute"
                    label="COM_HELKACAL_EVENT_END_MINUTE_LABEL"
                    description="COM_HELKACAL_EVENT_END_MINUTE_DESC"
	    />
	    <field
		    type="checkbox"
		    name="allday"
		    id="allday"
		    label="COM_HELKACAL_ALLDAY"
		    description="COM_HELKACAL_ALLDAY_DESC"
	    />
	</fieldset>
	<fieldset name="addEventExtra">
	    <field
		    type="subcategory"
		    name="category"
		    id="category"
		    parentid="0"
		    depth="2"
		    extension="com_content"
		    label="COM_HELKACAL_EVENT_CATEGORY_LABEL"
		    description="COM_HELKACAL_EVENT_CATEGORY_DESC"
	    />
	    <field
		    type="checkbox"
		    name="featured"
		    id="featured"
		    label="JGLOBAL_FIELD_FEATURED_LABEL"
		    description="JGLOBAL_FIELD_FEATURED_DESC"
	    />
	    <field
		    type="text"
		    name="location"
		    id="location"
		    maxlength="100"
		    label="COM_HELKACAL_EVENT_LOCATION_LABEL"
		    description="COM_HELKACAL_EVENT_LOCATION_DESC"
	    />
	    <field
		    type="text"
		    name="url"
		    id="url"
		    maxlength="100"
		    label="COM_HELKACAL_EVENT_URL_LABEL"
		    description="COM_HELKACAL_EVENT_URL_DESC"
	    />
	    <field
		    type="checkbox"
		    name="chargeable"
		    id="chargeable"
		    label="COM_HELKACAL_CHARGEABLE_LABEL"
		    description="COM_HELKACAL_CHARGEABLE_DESC"
	    />
	    <field
		    type="checkbox"
		    name="children"
		    id="children"
		    label="COM_HELKACAL_CHILDREN_LABEL"
		    description="COM_HELKACAL_CHILDREN_DESC"
	    />
	    <!--field
		    type="text"
		    name="tickets"
		    id="tickets"
		    maxlength="100"
		    label="COM_HELKACAL_EVENT_TICKETS_LABEL"
		    description="COM_HELKACAL_EVENT_TICKETS_DESC"
	    /-->
	    <field
		    type="textarea"
		    name="contact"
		    id="contact"
		    maxlength="255"
		    label="COM_HELKACAL_EVENT_CONTACT_LABEL"
		    description="COM_HELKACAL_EVENT_CONTACT_DESC"
		    rows="3"
	    />

        </fieldset>
    </fields>
</form>
